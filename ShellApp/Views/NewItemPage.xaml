<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="ShellApp.Views.NewItemPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:vm="clr-namespace:ShellApp.ViewModels"
    Title="New Item"
    ios:Page.UseSafeArea="true"
    x:DataType="vm:NewItemViewModel"
    BindingContext="{x:Static vm:ViewModelLocator.NewItemViewModel}"
    Shell.PresentationMode="ModalAnimated">
    <ContentPage.Content>
        <StackLayout Padding="15" Spacing="3">
            <Label FontSize="Medium" Text="Text" />
            <Entry FontSize="Medium" Text="{Binding Text, Mode=TwoWay}" />
            <Label FontSize="Medium" Text="Description" />
            <Editor
                Margin="0"
                AutoSize="TextChanges"
                FontSize="Medium"
                Text="{Binding Description, Mode=TwoWay}" />
            <StackLayout Orientation="Horizontal">
                <Button
                    Command="{Binding PickPhotoCommand}"
                    HorizontalOptions="FillAndExpand"
                    Text="Pick image" />
            </StackLayout>
            <Image Source="{Binding PhotoPath}" />
            <StackLayout Orientation="Horizontal">
                <Button
                    Command="{Binding CancelCommand}"
                    HorizontalOptions="FillAndExpand"
                    Text="Cancel" />
                <Button
                    Command="{Binding SaveCommand}"
                    HorizontalOptions="FillAndExpand"
                    Text="Save" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
